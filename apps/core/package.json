  "keywords": [],
  "license": "ISC",
  "author": "Joabe Silva <joabevarjao123@gmail.com>",
  "main": "dist/server.js",
  "scripts": {
    "populate": "node --env-file=.env --import=tsx cli/populate",
    "dev": "tsx watch --env-file=.env src/server.ts",
    "build": "rimraf dist && node --import=tsx esbuild.ts",
    "build:type-check": "tsc",
    "start": "node --env-file=.env.production dist/server.js",
    "start:watch": "node --env-file=.env.production --watch dist/server.js",
    "test": "NODE_ENV=test mocha",
    "test:watch": "NODE_ENV=test mocha --watch",
    "test:coverage": "NODE_ENV=test c8 --reporter cobertura --reporter lcov --reporter text-summary mocha",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/jwt": "^7.2.2",
    "@fastify/oauth2": "^7.5.0",
    "@fastify/redis": "^6.1.1",
    "@next/common": "workspace:*",
    "@next/constants": "workspace:^",
    "@next/models": "workspace:^",
    "close-with-grace": "^1.2.0",
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.1",
    "mongoose": "^7.6.3",
    "ofetch": "^1.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@next/tsconfig": "workspace:^",
    "@next/types": "workspace:^",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.8.7",
    "@types/sinon": "^10.0.20",
    "c8": "^8.0.1",
    "esbuild": "^0.19.5",
    "esbuild-plugin-pino": "^2.0.2",
    "mocha": "^10.2.0",
    "pino-pretty": "^10.2.3",
    "rimraf": "^5.0.5",
    "sinon": "^17.0.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
