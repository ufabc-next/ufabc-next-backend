{
  "extends": [
    "fastify-tsconfig"
  ],
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
    "outDir": "dist",
    "rootDir": "src", 
     "sourceMap": true

  },
  "include": [
    "src/**/*.ts",
    "esbuild.ts",
    "test/**/*.ts",
    "runTests.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}