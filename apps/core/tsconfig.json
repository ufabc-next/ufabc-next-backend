{
  "extends": ["@next/tsconfig/fastify.json"],
  "compilerOptions": {
    "module": "NodeNext",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": [
    "src/**/*.ts",
    "**.config.ts",
    "esbuild.ts",
    "test/**/*.spec.ts",
    "test/**/*.ts"
  ],
  "exclude": ["node_modules/**/*"]
}
