{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [
    ".env"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "env": [
        "NODE_ENV"
      ],
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ],
      "cache": true
    },
    "tsc": {
      "dependsOn": [
        "^build"
      ],
      "cache": true,
      "outputLogs": "errors-only"
    },
    "start": {
      "cache": true
    },
    "start:watch": {
      "cache": true,
      "persistent": true
    },
    "lint": {
      "outputLogs": "errors-only"
    },
    "lint:fix": {
      "outputLogs": "errors-only"
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "cache": true,
      "inputs": [
        "src/**/*.ts",
        "test/**/*.ts"
      ],
      "env": [
        "NODE_ENV",
        "MONGODB_CONNECTION_URL",
        "REDIS_CONNECTION_URL"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": [
        "^test"
      ],
      "cache": true
    }
  }
}